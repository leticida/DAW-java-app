<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Consulta</servlet-name>
        <servlet-class>com.llibreria.Consulta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Consulta</servlet-name>
        <url-pattern>/consulta</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Afegir</servlet-name>
        <servlet-class>com.llibreria.Afegir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Afegir</servlet-name>
        <url-pattern>/afegir</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Editar</servlet-name>
        <servlet-class>com.llibreria.Editar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Esborrar</servlet-name>
        <servlet-class>com.llibreria.Esborrar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Esborrar</servlet-name>
        <url-pattern>/esborrar</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>llibreria.jsp</welcome-file>
    </welcome-file-list>
</web-app>
